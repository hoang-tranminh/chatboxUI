@using System.Configuration
@using System.Web.Configuration
@using System.Web.Optimization
@{
    ViewBag.Title = "BackendApp";
    Layout = "~/Areas/BackendApp/Views/Shared/BackendAppLayout.cshtml";
}

@section HeaderScript{
   
    @Scripts.Render("~/Scripts/bundle")
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->

}

@section PageHeader{
    <input type="hidden" id="backendDomain" value="@WebConfigurationManager.AppSettings["backendDomain"]" />    
    <input type="hidden" id="loginUser" value="@ViewBag.UserName" />
    <input type="hidden" id="baseDomain" value="@WebConfigurationManager.AppSettings["baseDomain"]" />   
    <input type="hidden" id="currentDomain" value="@ViewBag.CurrentDomain" /> 
}   

<div id="reactContainer">

</div>

@section FooterScript{
    <script src="~/Areas/BackendApp/Static/JS/build/bundle.js"></script>
}
      

      

       
    
 

